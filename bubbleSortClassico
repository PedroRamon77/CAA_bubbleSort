#include <stdio.h>
#include <stdbool.h>

int bubbleSortClassico(int vetor[], int n) {
    int i, j, aux;
    int comparacoes = 0;

    for (i = 0; i < n - 1; i++) {
        for (j = 0; j < n - 1 - i; j++) {
            comparacoes++;
            if (vetor[j] > vetor[j + 1]) {
                aux = vetor[j];
                vetor[j] = vetor[j + 1];
                vetor[j + 1] = aux;
            }
        }
    }
    return comparacoes;
}

int main() {
    int vetorMelhorCaso[] = {1, 2, 3, 4, 5};
    int vetorPiorCaso[]   = {5, 4, 3, 2, 1};
    int vetorMedioCaso[]  = {1, 2, 5, 3, 4};
    int n = 5;
    int v1[5];
    
    for (int i = 0; i < n; i++) v1[i] = vetorMelhorCaso[i];
    int comp1 = bubbleSortClassico(v1, n);
    printf("Melhor Caso - numero de comparacoes: %d\n", comp1);

    int v2[5];
    for (int i = 0; i < n; i++) v2[i] = vetorPiorCaso[i];
    int comp2 = bubbleSortClassico(v2, n);
    printf("Pior Caso - numero de comparacoes: %d\n", comp2);

    int v3[5];
    for (int i = 0; i < n; i++) v3[i] = vetorMedioCaso[i];
    int comp3 = bubbleSortClassico(v3, n);
    printf("Medio Caso - numero de comparacoes: %d\n", comp3);

    return 0;
}
